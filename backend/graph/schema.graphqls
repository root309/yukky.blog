# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Post {
  id: ID!
  title: String!
  summary: String
  content: String!
  createdAt: String!
  updatedAt: String
}

type Query {
  posts: [Post!]!
  post(id: ID!): Post
}

type Mutation {
  createPost(title: String!, summary: String, content: String!): Post!
  updatePost(id: ID!, title: String, summary: String, content: String): Post
  deletePost(id: ID!): Boolean
}
